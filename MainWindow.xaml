<Window x:Class="Client.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Client"
        mc:Ignorable="d"
        Title="Raw Input Receiver" Height="520" Width="900" MinHeight="420" MinWidth="720">
    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Margin="0,0,0,12">
            <TextBlock Text="Raw Input клавиатуры (RIDEV_INPUTSINK)" FontSize="20" FontWeight="SemiBold"/>
            <TextBlock x:Name="StatusText" Text="Статус: ожидание инициализации..." Foreground="DarkGreen" Margin="0,6,0,0"/>
            <TextBlock Text="Окно может быть не в фокусе — события всё равно приходят." Opacity="0.7"/>
        </StackPanel>

        <Border Grid.Row="1" Background="#F3F3F3" CornerRadius="6" Padding="10" Margin="0,0,0,12">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Последнее событие:" FontWeight="SemiBold"/>
                <TextBlock x:Name="LastEventText" Text="—" Margin="8,0,0,0"/>
            </StackPanel>
        </Border>

        <ListBox x:Name="EventsList" Grid.Row="2" FontFamily="Consolas"/>

        <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,12,0,0">
            <Button x:Name="ClearButton" Content="Очистить" Padding="12,6" Click="ClearButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
