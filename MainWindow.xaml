<Window x:Class="Client.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Client"
        mc:Ignorable="d"
        Title="Raw Input Receiver" Height="520" Width="900" MinHeight="420" MinWidth="720"
        Background="{StaticResource Brush.WindowBg}">
    <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled"
                  Background="{StaticResource Brush.WindowBg}">
        <Grid Margin="16">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Margin="0,0,0,12">
            <TextBlock Text="Input keys" FontSize="20" FontWeight="SemiBold"/>
            <TextBlock x:Name="StatusText" Text="Статус: ожидание инициализации..." Foreground="DarkGreen" Margin="0,6,0,0"/>
            <TextBlock Text="Окно можно свернуть." Opacity="0.7"/>
        </StackPanel>

        <Border Grid.Row="1" Background="{StaticResource Brush.CardBg}" CornerRadius="6" Padding="10" Margin="0,0,0,12">
            <StackPanel>
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock Text="Host:" VerticalAlignment="Center"/>
                    <TextBox x:Name="HostBox" Width="140" Margin="8,0,12,0" Text="127.0.0.1"
                             Background="#1F2F1F" BorderBrush="#3FAF5F" />
                    <TextBlock Text="Port:" VerticalAlignment="Center"/>
                    <TextBox x:Name="PortBox" Width="80" Margin="8,0,12,0" Text="50123" IsReadOnly="True"/>
                    <TextBlock Text="Name:" VerticalAlignment="Center"/>
                    <TextBox x:Name="NameBox" Width="140" Margin="8,0,12,0" Text="player1"/>
                    <TextBlock Text="Npc:" VerticalAlignment="Center"/>
                    <TextBox x:Name="NpcBox" Width="60" Margin="8,0,12,0" Text="0"
                             ToolTip="0=auto, 1=front, 2=back, or event_id"/>
                    <Button x:Name="TelegramButton" Padding="4" Margin="0,0,8,0" Click="OnTelegramClick"
                            Background="Transparent" BorderBrush="{x:Null}" ToolTip="Telegram">
                        <Image Width="16" Height="16" Stretch="Uniform" Source="Assets/telegram.png"/>
                    </Button>
                    <Button x:Name="ConnectButton" Content="Connect" Padding="12,4" Margin="0,0,8,0" Click="ConnectButton_Click"
                            Background="#2E6D3A" BorderBrush="#46C169" />
                    <Button x:Name="DisconnectButton" Content="Disconnect" Padding="12,4" IsEnabled="False" Click="DisconnectButton_Click"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal" Margin="0,6,0,0">
                    <TextBlock Text="Network:" FontWeight="SemiBold"/>
                    <TextBlock x:Name="NetStatusText" Text="disconnected" Margin="8,0,0,0"/>
                    <TextBlock Text="PID:" FontWeight="SemiBold" Margin="16,0,0,0"/>
                    <TextBlock x:Name="PidText" Text="-" Margin="8,0,0,0"/>
                </StackPanel>
            </StackPanel>
        </Border>

        <Border Grid.Row="2" Background="{StaticResource Brush.CardBg}" CornerRadius="6" Padding="10" Margin="0,0,0,12">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Последнее событие:" FontWeight="SemiBold"/>
                <TextBlock x:Name="LastEventText" Text="—" Margin="8,0,0,0"/>
            </StackPanel>
        </Border>

        <Border Grid.Row="3" Background="{StaticResource Brush.CardBg}" CornerRadius="6" Padding="10" Margin="0,0,0,12">
            <DockPanel>
                <StackPanel DockPanel.Dock="Top" Margin="0,0,0,8">
                    <TextBlock Text="Назначение клавиш клиента" FontWeight="SemiBold"/>
                    <TextBlock x:Name="BindStatusText" Text="Нажмите «Назначить» и затем нужную клавишу."
                               Opacity="0.7" Margin="0,4,0,0"/>
                </StackPanel>
                <DataGrid x:Name="BindingsGrid"
                          AutoGenerateColumns="False"
                          IsReadOnly="True"
                          HeadersVisibility="Column"
                          CanUserResizeRows="False"
                          GridLinesVisibility="None"
                          RowHeight="28"
                          MinHeight="140">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Действие" Binding="{Binding Action}" Width="*"/>
                        <DataGridTextColumn Header="Клавиша" Binding="{Binding KeyName}" Width="160"/>
                        <DataGridTemplateColumn Header="" Width="120">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Button Content="Назначить" Padding="8,2" Click="BindButton_Click"/>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                    </DataGrid.Columns>
                </DataGrid>
            </DockPanel>
        </Border>

        <Border Grid.Row="4" Background="{StaticResource Brush.CardBg}" CornerRadius="6" Padding="6" Margin="0,0,0,12">
            <ListBox x:Name="EventsList"
                     FontFamily="Consolas"
                     Height="220"
                     ScrollViewer.VerticalScrollBarVisibility="Auto"
                     ScrollViewer.HorizontalScrollBarVisibility="Disabled"/>
        </Border>

            <StackPanel Grid.Row="5" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,12,0,0">
                <Button x:Name="ClearButton" Content="Очистить" Padding="12,6" Click="ClearButton_Click"/>
            </StackPanel>
        </Grid>
    </ScrollViewer>
</Window>
