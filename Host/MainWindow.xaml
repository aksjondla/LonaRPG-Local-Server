<Window x:Class="Host.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Host"
        mc:Ignorable="d"
        Title="Host Server" Height="560" Width="920" MinHeight="420" MinWidth="720"
        Background="{StaticResource Brush.WindowBg}">
    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Orientation="Horizontal" VerticalAlignment="Center" Margin="0,0,0,12">
            <TextBlock Text="Bind IP:" VerticalAlignment="Center"/>
            <TextBox x:Name="BindIpBox" Width="140" Margin="8,0,16,0" Text="0.0.0.0" IsReadOnly="True"/>
            <TextBlock Text="Port:" VerticalAlignment="Center"/>
            <TextBox x:Name="PortBox" Width="80" Margin="8,0,16,0" Text="50123" IsReadOnly="True"/>
            <TextBlock Text="Pipe:" VerticalAlignment="Center"/>
            <TextBox x:Name="PipeNameBox" Width="140" Margin="8,0,16,0" Text="LCOInput" IsReadOnly="True"/>
            <TextBlock Text="Help?" VerticalAlignment="Center" Margin="0,0,6,0" Opacity="0.8"/>
            <Button x:Name="TelegramButton" Padding="4" Margin="0,0,8,0" Click="OnTelegramClick"
                    Background="Transparent" BorderBrush="{x:Null}" ToolTip="Telegram">
                <Image Width="16" Height="16" Stretch="Uniform" Source="Assets/telegram.png"/>
            </Button>
            <Button x:Name="StartButton" Content="Start" Padding="12,4" Margin="0,0,8,0" Click="StartButton_Click"
                    Background="#2E6D3A" BorderBrush="#46C169" />
            <Button x:Name="StopButton" Content="Stop" Padding="12,4" IsEnabled="False" Click="StopButton_Click"/>
            <Button x:Name="ConsoleButton" Content="Console" Padding="12,4" Click="ConsoleButton_Click"/>
        </StackPanel>

        <StackPanel Grid.Row="1" Margin="0,0,0,12">
            <TextBlock x:Name="StatusText" Text="Status: stopped"/>
            <TextBlock x:Name="PipeStatusText" Text="Pipe: n/a"/>
            <TextBlock x:Name="CamPipeStatusText" Text="CamPipe: n/a"/>
            <TextBlock x:Name="SavePipeStatusText" Text="SavePipe: n/a"/>
        </StackPanel>

        <DataGrid x:Name="PlayersGrid"
                  Grid.Row="2"
                  AutoGenerateColumns="False"
                  IsReadOnly="True"
                  CanUserAddRows="False"
                  HeadersVisibility="Column"
                  GridLinesVisibility="Horizontal">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Pid" Binding="{Binding Pid}" Width="60"/>
                <DataGridTextColumn Header="Name" Binding="{Binding Name}" Width="160"/>
                <DataGridTextColumn Header="Npc" Binding="{Binding Npc}" Width="60"/>
                <DataGridTextColumn Header="Seq" Binding="{Binding Seq}" Width="90"/>
                <DataGridTextColumn Header="Save Req" Binding="{Binding SaveReqAgo}" Width="80"/>
                <DataGridTextColumn Header="Save Rx" Binding="{Binding SaveRxAgo}" Width="80"/>
                <DataGridTextColumn Header="KeysMask" Binding="{Binding KeysMask}" Width="180"/>
                <DataGridTextColumn Header="Last Seen" Binding="{Binding LastSeen}" Width="180"/>
                <DataGridTemplateColumn Header="" Width="110">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Button Content="Отключить" Padding="8,2" Click="DisablePlayerButton_Click"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>

        <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,12,0,0">
            <Button Content="Clear" Padding="12,6" Click="ClearButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
